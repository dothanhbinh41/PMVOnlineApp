<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PMVOnline.Common.Controls.FloatingButtonItemControl"
    x:Name="ItemFB">
    <Grid
        Margin="0,0,12,0"
        ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="48" />
        </Grid.ColumnDefinitions>

        <Frame
            IsVisible="{Binding Source={Reference ItemFB}, Path=IsVisible}"
            Margin="4"
            Grid.Column="0"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Padding="8,0"
            HasShadow="False"
            HeightRequest="28"
            BackgroundColor="#99000000"
            CornerRadius="4">
            <Label
                x:Name="title"
                Style="{StaticResource LabelSmall}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="White"
                Text="{Binding Source={Reference ItemFB}, Path=Title}" />
        </Frame>

        <Frame
            IsVisible="{Binding Source={Reference ItemFB}, Path=IsVisible}"
            Margin="4"
            Grid.Column="1"
            HeightRequest="40"
            WidthRequest="40"
            CornerRadius="20"
            Padding="0"
            BackgroundColor="{Binding Source={Reference ItemFB}, Path=Color}"
            VerticalOptions="Center">
            <Image
                VerticalOptions="Center"
                HorizontalOptions="Center"
                x:Name="ItemFloatingBtn"
                HeightRequest="16"
                WidthRequest="16">
            </Image>
        </Frame>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer
                Tapped="TapGestureRecognizer_Tapped" />
        </Grid.GestureRecognizers>
    </Grid> 
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer
            Tapped="TapGestureRecognizer_Tapped" />
    </ContentView.GestureRecognizers>
</ContentView>