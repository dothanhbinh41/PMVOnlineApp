<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PMVOnline.Common.Styles.LabelStyles"
    xmlns:style="clr-namespace:PMVOnline.Common.Styles">
    <ResourceDictionary.MergedDictionaries>
        <style:Colors />
        <style:Dimensions />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="LabelBase"
        TargetType="Label">
        <Setter
            Property="TextColor"
            Value="{StaticResource Text}" />
    </Style>
    <Style
        x:Key="LabelDescription"
        TargetType="Label">
        <Setter
            Property="TextColor"
            Value="{StaticResource Description}" />
        <Setter
            Property="FontSize"
            Value="Small" />
    </Style>
    <Style
        x:Key="LabelTitle"
        TargetType="Label"> 
        <Setter
            Property="FontSize"
            Value="Title" />
    </Style>
</ResourceDictionary>